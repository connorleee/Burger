<div class="container">
    <div class="jumbotron text-center">
        <h1>Eat da Burger</h1>
    </div>
</div>
<div class="container">
    <div class="row justify-content-between">
        <div class="col-md-5">
            {{#each burgers}}
                {{#unless devoured}}
                    <h3>
                        {{burger_name}}
                        <button type="button" class="btn btn-primary float-right" id="devour{{id}}">Devour</button>
                    </h3>
                {{/unless}}
            {{/each}}
        </div>

        <div class="col-md-5">
            {{#each burgers}}
                 {{#if devoured}}
                    <h3>
                        {{burger_name}}
                    </h3>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <br>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form>
                <div class="form-group text-center">
                    <label><h2>What burger masterpiece is on your mind?</h2></label>
                    <input class="form-control-lg text-center" id="burgerName">
                </div>
            </form>
        </div>
    </div>
</div>